with "kowlib.gpr";

project KOWConfig is

	Version := $version;

	for Source_Dirs use ( "src" );
	for Object_Dir use "obj";

	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "kowconfig";
	for Library_Kind use KOWLib'Library_Kind;
	for Library_Version use "libkowconfig.so." & Version;


	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;



end KOWConfig;

